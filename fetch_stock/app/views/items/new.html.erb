<div class="span12">

 <%= simple_form_for [@investment,@item] do |f| %>
 <%= f.input :symbol, :input_html => { :class => "input-xxlarge"} %>
 <%= f.input :name, :input_html => { :class => "input-xxlarge"} %>
 <%= f.input :stock_type, :input_html => { :class => "input-xxlarge"} %>
 <%= f.input :value, :input_html => { :class => "input-xxlarge"} %>
 <%= f.input :coin_type, :input_html => { :class => "input-xxlarge"} %>
 <%= f.input :time, :input_html => { :class => "input-xxlarge"} %>

 <div class="form-actions">
 <%= f.submit "Submit", :disable_with => 'Submiting...', :class => "btn btn-primary" %>
 </div>
 <% end %>

 </div>